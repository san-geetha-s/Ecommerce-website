<section>
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add Product</h2>
                
                <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
               
                <input type="text" name="Name" placeholder="Name of product" class="form-control" >

                
                <input type="text" name="Category" placeholder="Category" class="form-control" >

                <input type="text" name="Description" placeholder="Description" class="form-control" >
                <input type="number" name="Price" placeholder="Price" class="form-control" >

                

                <input type="file" name="Image" id="Image" class="form-control" style="margin-top: 5px;">

                <button type="submit" class="btn btn-success mt-4">Add Product</button>

                </form> 
            </div>
        </div>

    </div>
</section>