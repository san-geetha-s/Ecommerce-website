<script src="https://cdn.lordicon.com/libs/mssddfmo/lord-icon-2.1.0.js"></script>

    <section>
        <div class="container" style="margin-top: 88px;">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card fadeInDown third" style="width: 15rem; height:25rem">
                      <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" style="height: 12rem;" >
                      <div class="card-body fadeIn third">
                          
                       <a href="/productPage/{{this._id}}" style="text-decoration: none;"> <h5 class="card-title">{{this.Name}}</h5> </a>
                        
                        <p class="card-text">{{{this.Description}}}</p>
                        <p class="card-text">â‚¹{{this.Price}}</p>
                        <tr>
                        <td>

                       <a href="/productPage/{{this._id}}" style="text-decoration: none;"> <button  class="btn btn-primary cartButton">Add to cart<span style="position: relative;left:5px"><i class="fas fa-cart-plus"></i></span></button></a>
                       </td>
                       <td>
                       
                       
                       <a href="/place-order" style="text-decoration: none;"> <button  class="btn btn-danger cartButton">Buy Now<span style="position: relative;left:5px"></span></button></a>
                      </td>
                      </tr>
                      </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
        
    </section>
    



